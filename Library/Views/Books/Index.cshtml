@model IEnumerable<Library.Models.Books>
@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Book Edition Year
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="5%">
                    @obj.ID
                </td>
                <td width="29%">
                    @obj.Title
                </td>
                <td width="29%">
                    @obj.Author
                </td>
                <td width="20%">
                    @obj.BookEditionYear
                </td>
                <td width="17%">
                    <a asp-action="Edit" asp-route-id="@obj.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@obj.ID">Delete</a> |
                    <a asp-action="Reserve" asp-route-id="@obj.ID">Reserve</a>
                </td>
                
                
            </tr>
        }

    
    </tbody>

</table>


<td>

    <a asp-action="Create">"Add new"</a>
</td>